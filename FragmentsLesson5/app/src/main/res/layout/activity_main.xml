<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="22dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:textSize="9sp"
        android:id="@+id/add_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintRight_toLeftOf="@id/remove_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="9sp"
        android:id="@+id/remove_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintRight_toLeftOf="@id/replace_btn"
        app:layout_constraintLeft_toRightOf="@id/add_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="9sp"
        android:id="@+id/replace_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Replace"
        app:layout_constraintRight_toLeftOf="@id/hide_btn"
        app:layout_constraintLeft_toRightOf="@id/remove_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="9sp"
        android:id="@+id/hide_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/show_btn"
        android:text="Hide"
        app:layout_constraintLeft_toRightOf="@id/replace_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textSize="9sp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/show_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show"
        app:layout_constraintLeft_toRightOf="@id/hide_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    



</androidx.constraintlayout.widget.ConstraintLayout>