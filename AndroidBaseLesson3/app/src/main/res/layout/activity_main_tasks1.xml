<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="2000dp"
    android:layout_marginVertical="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="#00B8A0"
        android:gravity="center_vertical"
        android:paddingBottom="11dp"
        android:text="TableLayoutInKotlin"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="0dp"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/tableTitle"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="0dp"
            android:text="@string/icc_ranking_od_players"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3">


            <TableRow>
                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="Rank"
                    android:textSize="20sp" />

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="Player"
                    android:textSize="20sp" />

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="Team"
                    android:textSize="20sp" />

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="Points"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="8dp"
                    android:text="1"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="Virar Khli"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="IND"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="895"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="8dp"
                    android:text="2"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="Rohit Sharma"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="IND"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="863"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="8dp"
                    android:text="3"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="Faf du Plessis"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="PAK"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="834"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="8dp"
                    android:text="4"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="Steven Smith"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="AUS"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="820"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="8dp"
                    android:text="5"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="Ross Taylor"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="NZ"
                    android:textSize="20sp" />

                <TextView
                    android:padding="8dp"
                    android:text="817"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>
