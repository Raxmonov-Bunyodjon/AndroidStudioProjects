<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="#000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="157dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginTop="111dp"
                        android:background="#FF5849">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="55dp"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="-127dp"
                        android:layout_marginTop="4dp"
                        android:background="#142BAF">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="125dp"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="-140dp"
                        android:layout_marginTop="111dp"
                        android:background="#FF9800">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="27dp"
                            android:text="6"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="208dp"
                        android:layout_height="78dp"
                        android:layout_marginLeft="-70dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginRight="70dp"
                        android:background="#36BA4D">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="100dp"
                            android:text="7"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="181dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-133dp"
                        android:layout_marginTop="4dp"
                        android:background="#5C21BD">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="27dp"
                            android:text="2"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="2"
                        android:background="#FF511A">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="110dp"
                            android:text="8"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="#757AB3">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            android:text="9"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="#0C6B11">

                    <TextView
                        android:layout_width="320sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="7dp"
                        android:text="Alphabet (Nested MondrianLayout)"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="#C29DFF9D">

                        <TextView
                            android:layout_width="15sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="33dp"
                            android:text="A"
                            android:textColor="#000000"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="#ACFFAE">

                                <TextView
                                    android:layout_width="15sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="33dp"
                                    android:text="B"
                                    android:textColor="#000000"
                                    android:textSize="22sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="2"
                                android:background="#84F08C">

                                <TextView
                                    android:layout_width="15sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="70dp"
                                    android:text="C"
                                    android:textColor="#000000"
                                    android:textSize="22sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="2"
                                android:background="#6BDC6B">

                                <TextView
                                    android:layout_width="15sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="70dp"
                                    android:text="D"
                                    android:textColor="#000000"
                                    android:textSize="22sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="#60D762">

                                <TextView
                                    android:layout_width="15sp"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="33dp"
                                    android:text="E"
                                    android:textColor="#000000"
                                    android:textSize="22sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="#009688">

                <TextView
                    android:layout_width="15sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="27dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="7"
                android:background="#E91E63">

                <TextView
                    android:layout_width="15sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="27dp"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



